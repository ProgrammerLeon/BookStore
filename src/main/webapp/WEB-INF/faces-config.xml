<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <el-resolver>org.glassfish.mvc.bookstore.controller.util.JsfCrudELResolver</el-resolver>
    </application>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>welcome</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>LoginBean</managed-bean-name>
        <managed-bean-class>org.glassfish.mvc.bookstore.security.LoginBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <navigation-case>
            <from-action>#{LoginBean.login}</from-action>
            <from-outcome>admin/admin</from-outcome>           
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>authenticateUser_create</from-outcome>
            <to-view-id>/admin/authenticateUser/New.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>authenticateUser_list</from-outcome>
            <to-view-id>/admin/authenticateUser/List.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>authenticateUser_edit</from-outcome>
            <to-view-id>/admin/authenticateUser/Edit.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>authenticateUser_detail</from-outcome>
            <to-view-id>/admin/authenticateUser/Detail.jsp</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
